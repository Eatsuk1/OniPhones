@page "/0"
@using System.Security.Claims

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />

<AuthorizeView>
    <Authorized>
        
<div class="row">
    <div class="col-md-12">

        <h3>Claims associated with current User</h3>
        <p>This page displays all the claims associated the the current User. This is useful when debugging to see which claims are being populated from the Auth0 ID Token.</p>

        <table class="table">
            <thead>
            <tr>
                <th>
                    Claim
                </th>
                <th>
                    Value
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var claim in @context.User.Claims)
            {
	            if (claim.Type == ClaimTypes.NameIdentifier)
	            {

		            customerid = claim.Value;
		            <tr>
			            
			            <td>@customerid</td>
		            </tr>
	            }
            }
            </tbody>
        </table>
    </div>
</div>
    </Authorized>
    <NotAuthorized>
        <a href="Account/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>

@code
{
    [Parameter]
    public string customerid { get; set; }
}
