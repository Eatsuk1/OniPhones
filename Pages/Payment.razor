	<!-- Payment -->
	<div class="payment" >
		<div class="row">
		<!-- Payment--info -->
			<div class="col c-7 paymentInfo">
				<div class="paymentInfo-shipinfo">
               		<h3>THÔNG TIN GIAO HÀNG</h3>
               		<input type="text" placeholder="Họ và tên" value="@customer.Name"/>
