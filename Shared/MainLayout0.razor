@inherits LayoutComponentBase
@using DoAn1.Pages
@using DoAn1.Data
@using DoAn1.Models
@inject DoAn1.Service.CustomerService CustomerIService
@inject Microsoft.AspNetCore.Components.NavigationManager navigationManager

    <!-- Top Bar -->
    
<div id="header">
        <div class="grid wide">
            <div class="row">
                <div class="col header__logo c-2">
                    <a href = "/0"><img src="./assets/imgs/Logo-oniphone.png" alt="logo">
                    </a>
                </div>
                <div class="col c-6">
                    <div class="header__searchbar">
                        <img src="./assets/imgs/svg/magnifying-glass-solid.svg" alt="">
                       @* <input type="search" name="q" id="device_name" bind = "@device_name" placeholder="Bạn cần tìm gì?" >
                        <input type = "button" onclick = "@NavigateToComponent" value = "submit"/>*@
                        <EditForm Model="_Search" OnValidSubmit="NavigateToComponent" class="header__searchbar">
                            
                            <input @onkeydown="a" type="text" placeholder="Bạn cần tìm gì?" @bind="_Search._search">

                            @*<button value="search" type="submit"></button>*@
                        </EditForm>

                    </div>
                </div>
                <div class="col header__phone c-2">
                    <div class="header__phone--icon">
                        <a href="Tel:1800xxxx"><img src="./assets/imgs/svg/phone.svg" alt=""></a>
                    </div>
                    <div class="header__phone--sub">
                        <div>
                            <a href="Tel:1800xxxx">Gọi mua hàng</a>
                        </div>
                        <div>
                            <a class="header__phone--number" href="Tel:1800xxxx">1800.xxxx</a>
                        </div>
                    </div>
                </div>

                <div class="header__section col c-1">
                    <div class="header__section--item">
                        <img src="./assets/imgs/svg/shopping-cart.svg" alt="">
                    </div>
                    <div class="header__section--sub">
                        <a href="">Giỏ hàng</a>
                    </div>
                </div>
                <div class="header__section col c-1">
	                <div class="header__section--item">
		                <img src="./assets/imgs/svg/user.svg" alt="">
	                </div>
	                <AuthorizeView>
		                <Authorized>
			                <div class="header__section--sub">
				                <a href="Account/Main">Cmember</a>
			                </div>
			                <form method="post" action="Account/LogOut">
				                <button type="submit" class="nav-link btn btn-link">Log out</button>
			                </form>
		                </Authorized>
		                <NotAuthorized>
			                <div class="header__section--sub">
				                <a href="Account/Login">Cmember</a>
			                </div>
		                </NotAuthorized>
	                </AuthorizeView>
	                
                </div>

            </div>
        </div>
    </div>
    @Body
    
    

@code {

    public Models.Search _Search = new();

    [Parameter]
    public string key { get; set; }

    private void NavigateToComponent()
    {
        navigationManager.NavigateTo($"/phone/{_Search._search}");
    }

    private void a(KeyboardEventArgs args)
    {
        if (args.Key == "Enter")
        {
            NavigateToComponent();
        }
    }



    }
